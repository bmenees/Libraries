<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<!-- https://docs.microsoft.com/en-us/dotnet/standard/frameworks -->
		<TargetFrameworks>netcoreapp3.1;net45</TargetFrameworks>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Description>Windows-specific helpers for WMI, shell dialogs, and Visual Studio invocation</Description>
	</PropertyGroup>
	<ItemGroup>
	  <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Menees.Common\Menees.Common.csproj" />
	</ItemGroup>

	<Choose>
		<When Condition=" '$(TargetFramework)' == 'net45' ">
			<ItemGroup>
				<Compile Remove="NativeMethods.Core.cs" />
				<Content Include="NativeMethods.Core.cs" />

				<Compile Remove="VisualStudioInvoker.Core.cs" />
				<Content Include="VisualStudioInvoker.Core.cs" />
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<Compile Remove="VisualStudioInvoker.Framework.cs" />
				<Content Include="VisualStudioInvoker.Framework.cs" />
			</ItemGroup>
		</Otherwise>
	</Choose>

	<Choose>
		<When Condition=" '$(TargetFramework)' == 'net45' ">
			<ItemGroup>
				<Reference Include="System.Management" />
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<PackageReference Include="Microsoft.Windows.Compatibility" Version="3.1.0" />
			</ItemGroup>
		</Otherwise>
	</Choose>
</Project>
